# Use an official Python image
FROM python:3.10-slim

# Set the working directory to match module structure
WORKDIR /app/packages/backend/api

# Copy requirements file and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the backend code
COPY . .

# Expose the port the app runs on
EXPOSE 8000

# Keep PYTHONPATH the same since all imports are relative to this directory
ENV PYTHONPATH=/app/packages/backend/api

# Try full path to uvicorn
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
